<VirtualHost *:80>
    ServerName {{ var }}
    ServerAlias www.{{ var }}

    DocumentRoot /var/www/{{ var }}/web
    <Directory /var/www/{{ var }}/web>
        AllowOverride All
        Order Allow,Deny
        Allow from All
    </Directory>

    # uncomment the following lines if you install assets as symlinks
    # or run into problems when compiling LESS/Sass/CoffeeScript assets
    # <Directory /var/www/project>
    #     Options FollowSymlinks
    # </Directory>

    ErrorLog /var/log/apache2/{{ var | replace(".", "_") }}_error.log
    CustomLog /var/log/apache2/{{ var | replace(".", "_") }}_access.log combined
</VirtualHost>
